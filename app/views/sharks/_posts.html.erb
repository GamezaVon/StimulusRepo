<div data-controller="posts">
        <%= form_with :id => 'post_form', model: [@shark, @shark.posts.build], data: { action: "posts#addBody"} do |form|%>
                <%= form.text_area :body, placeholder: "Your post here", 'data-posts-target' => 'body' %>
                <br>
                <%= form.submit %>
        <% end %>
        <ul data-posts-target="add" id="posts-list"></ul>
</div>